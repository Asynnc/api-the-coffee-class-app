{
  "name": "the-coffee-class-api",
  "version": "2.0.2",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "test": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:watch": "vitest",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "dev": "tsnd --inspect --transpile-only --respawn --ignore-watch node_modules src/app/core/shared/http/server.ts",
    "start": "yarn build && node dist/core/shared/http/server.js",
    "prepare": "husky install"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "source/**/*.{js,jsx,ts,tsx}": [
      "npm run lint:fix",
      "npm run test"
    ]
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.14",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/mime": "^3.0.1",
    "@types/multer": "^1.4.7",
    "@types/node": "^18.15.11",
    "@types/nodemailer": "^6.4.7",
    "@types/pdfmake": "^0.2.2",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "@vitest/coverage-c8": "^0.31.4",
    "@vitest/ui": "^0.31.4",
    "eslint": "^8.29.0",
    "eslint-plugin-vitest-globals": "^1.3.1",
    "express-async-errors": "^3.1.1",
    "husky": "^8.0.0",
    "lint-staged": "^13.2.2",
    "nodemon": "^2.0.20",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.9.3",
    "vite-tsconfig-paths": "^4.2.0",
    "vitest": "^0.31.1"
  },
  "dependencies": {
    "@faker-js/faker": "^8.0.2",
    "aws-sdk": "^2.1368.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "cuid": "^2.1.8",
    "dayjs": "^1.11.8",
    "dd-trace": "^3.19.0",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-rate-limit": "^6.7.0",
    "git-commit-msg-linter": "^5.0.4",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.0",
    "mime": "^3.0.0",
    "mongoose": "^6.7.5",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.1",
    "pdfmake": "^0.2.7",
    "socket.io": "^4.6.1"
  }
}
